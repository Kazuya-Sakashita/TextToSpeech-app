<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl">Contents</h1>
    <%= link_to 'New content', new_content_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <table class="min-w-full bg-white rounded-lg overflow-hidden shadow-lg">
    <thead class="bg-gray-100 border-b border-gray-200">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Body</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody id="contents">
      <% @contents.each do |content| %>
        <tr>
          <td class="px-4 py-3 border-b text-sm text-gray-600"><%= content.title %></td>
          <td class="px-4 py-3 border-b text-sm text-gray-600"><%= content.body.truncate(50) %></td>
          <td class="px-4 py-3 border-b text-sm text-gray-600">
            <%= link_to 'Show', content, class: "text-green-600 hover:text-green-900" %> |
            <%= link_to 'Edit', edit_content_path(content), class: "text-blue-600 hover:text-blue-900" %> |
            <%= link_to 'Delete', content, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
