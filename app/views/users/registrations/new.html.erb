<div class="w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
      <div class="px-6 py-4">
        <div class="flex justify-center mx-auto">
            <%= image_tag "icom.png", class: "w-auto h-10", alt: "" %>
        </div>

        <h3 class="mt-3 text-xl font-medium text-center text-gray-600 dark:text-gray-200">Welcome</h3>
        <p class="mt-1 text-center text-gray-500 dark:text-gray-400">Login or create account</p>


        <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, html: { class: "w-full mt-4" }) do |f| %>

          <%= render "users/shared/error_messages", resource: resource %>

          <div class="w-full mt-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300" %>
          </div>
          <div class="w-full mt-4">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード (6 characters minimum)", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300" %>
          </div>

          <div class="w-full mt-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "パスワード確認用", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "w-full my-4 px-6 py-2 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50" %>
          </div>
        <% end %>
      </div>
      <div class="flex items-center justify-center py-4 text-center bg-gray-50 dark:bg-gray-700">
        <%= render "users/shared/links" %> <span>　はこちらから</span>
      </div>
</div>